<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <bitmap
            android:src="@drawable/checkbox_checked_image"
        android:gravity="center"/>

    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- 체크 안된 상태의 색상 흰색 -->
            <stroke android:width="1dp" android:color="#7E7B7B"/> <!-- 테두리 색상 -->
        </shape>
    </item>
</selector>
