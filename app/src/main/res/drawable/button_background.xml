<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 버튼의 배경색 (투명도 50% 흰색) -->
    <solid android:color="#FFFF"/> <!-- 50% 투명도의 흰색 배경 -->

    <!-- 버튼의 테두리 설정 -->
    <stroke
        android:width="1dp"
        android:color="#008000"/>

    <!-- 버튼의 모서리 둥글기 설정 -->
    <corners android:radius="8dp"/> <!-- 모서리 둥글기 -->

    <!-- 버튼의 내부 여백 설정 -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="5dp"
        android:bottom="5dp"/>
</shape>